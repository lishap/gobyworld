// room script file


function room_LeaveRight()
{
cGoby.ChangeRoomAutoPosition(5, 1000);
}

function room_LeaveLeft()
{
cGoby.ChangeRoomAutoPosition(4, 2000);
}

bool dogFood_shown;

function room_Load(){
  dogFood_shown = false;
  oDogFood.Visible = false;
  cMallory.y = 10;
}
  
function region1_WalksOnto(){
  if (dogFood_shown) return;
  oDogFood.Visible = true;
  oDogFood.SetView(7);
  oDogFood.Animate(0, 5, 0, eBlock);
  player.LoseInventory(iDogFood);
  dogFood_shown = true;
  cGoby.Say("Oh noooo, Mallory's dog food!");
  cLaLaine.Say("If you help me, I'll give you an extra bone I have!");
}
