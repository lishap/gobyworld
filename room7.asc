// room script file

function room_LeaveRight()
{
cGoby.ChangeRoomAutoPosition(8, 1000);
}

function room_LeaveLeft()
{
cGoby.ChangeRoomAutoPosition(6, 2000);  
}

function region1_WalksOnto()
{
cGoby.ChangeView(9);
cGoby.SayBackground("Jesus Christ, it's so hot. All of the water is getting sucked out of me. I need water!");
}

function hPhallicRockForm_AnyClick()
{
cGoby.SayBackground("My snowglobes have water in them. I guess, I will have to break my beloved snowglobes to get the precious water inside.");
}

function hPhallicRockForm_UseInv()
{
if (cGoby.ActiveInventory == iSnowglobes){
  cGoby.LoseInventory(iSnowglobes);
  cGoby.ChangeView(1);
  }
}
